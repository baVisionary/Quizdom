@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html ng-app="app">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quizdom</title>

    <base href="/">
    <environment names="Development">
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link rel="stylesheet" href="~/lib/materialize/dist/css/materialize.min.css" media="screen,projection" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css" asp-fallback-href="~/css/materialize.min.css">
        <link rel="stylesheet" href="~/../dist/css/site.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body>
    <div class="container body-content">
        <nav>
            <div class="nav-wrapper">
                <div class="col s12">
                    <ul id="nav-mobile" class="align-center hide-on-sm-and-down">
                        <li><a ui-sref="welcome"><i class="large material-icons left">question_answer</i>Quizdom</a></li>
                        <li><a ui-sref="questions">Quiz Questions</a></li>
                        <li ng-if="!vm.isUserLoggedIn"><a ui-sref="Register">Register</a></li>
                        <li ng-if="!vm.isUserLoggedIn"><a ui-sref="Login">Log in</a></li>
                        <li ng-if="vm.isUserLoggedIn"><a>{{vm.user.userName}}</a></li>
                        <li ng-if="vm.isUserLoggedIn"><a href="" ng-click="vm.logOut()">Sign Out</a></li>
                    </ul>
                </div>
                <!-- <ul class="side-nav" id="mobile-demo">
                    <li><a ui-sref="Welcome">Quizdom</a></li>
                    <li><a ui-sref="questions">Quiz Questions</a></li>
                    <li ng-if="!vm.isUserLoggedIn"><a ui-sref="Register">Register</a></li>
                    <li ng-if="!vm.isUserLoggedIn"><a ui-sref="Login">Log in</a></li>
                    <li ng-if="vm.isUserLoggedIn"><a>{{vm.user.userName}}</a></li>
                    <li ng-if="vm.isUserLoggedIn"><a href="" ng-click="vm.logOut()">Sign Out</a></li>
                </ul> -->
            </div>
        </nav>

         <ui-view></ui-view> 
    </div>

    <!-- third-party libraries -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/materialize/dist/js/materialize.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angularUtils-pagination/dirPagination.js"></script>

    <!-- Models -->
    <script src="~/js/models/user.model.js"></script>
    <script src="~/js/models/forgotpassword.model.js"></script>
    <script src="~/js/models/login.model.js"></script>
    <script src="~/js/models/register.model.js"></script>
    <script src="~/js/models/question.js"></script>

    <!-- Factories  -->
    <script src="~/js/factories/authenticationinterceptor.js"></script>
    <script src="~/js/factories/factories.js"></script>

    <!-- Services  -->
    <script src="~/js/services/QuestionService.js"></script>
    <script src="~/js/services/UserService.js"></script>
    <script src="~/js/services/RegistrationService.js"></script>
    <script src="~/js/services/Services.js"></script>

    <!-- Application Views  -->
    <script src="~/js/views/forgotpassword/forgotpassword.controller.js"></script>
    <script src="~/js/views/forgotpassword/forgotpassword.config.js"></script>
    <script src="~/js/views/forgotpassword/forgotpassword.js"></script>

    <script src="~/js/views/login/login.controller.js"></script>
    <script src="~/js/views/login/login.config.js"></script>
    <script src="~/js/views/login/login.js"></script>

    <script src="~/js/views/register/register.controller.js"></script>
    <script src="~/js/views/register/register.config.js"></script>
    <script src="~/js/views/register/register.js"></script>

    <script src="~/js/views/welcome/welcome.controller.js"></script>
    <script src="~/js/views/welcome/welcome.config.js"></script>
    <script src="~/js/views/welcome/welcome.js"></script>

    <script src="~/js/views/questions/questions.controller.js"></script>
    <script src="~/js/views/questions/questions.config.js"></script>
    <script src="~/js/views/questions/questions.js"></script>

    <script src="~/js/views/views.js"></script>

    <!-- Application  -->
    <script src="~/js/app.controller.js"></script>
    <script src="~/js/app.config.js"></script>
    <script src="~/js/app.js"></script>

    <!-- <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
        })
    </script> -->

    <!-- Must be present or app will not find linked Angular files
        @RenderBody()
    -->

    @RenderSection("Scripts", required: false)
</body>

</html>