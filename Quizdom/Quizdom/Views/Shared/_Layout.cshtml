@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html ng-app="app">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quizdom</title>

    <base href="/">
    <environment names="Development">
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css" asp-fallback-href="~/css/materialize.min.css">
        <link rel="stylesheet" href="~/../dist/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>

<body>
    <div class="container body-content">
        <ui-view></ui-view>
    </div>

    <!-- third-party libraries -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/materialize/dist/js/materialize.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    <!--<script src="~/lib/angular-route/angular-route.js"></script>-->
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>

    <!-- Angular starting point-->
    <script src="~/js/app.js"></script>    

    <!-- add controllers here -->
    <script src="~/js/controllers/controller.js"></script>

    <!-- add services here -->
    <script src="~/js/services/questionService.js"></script>

    <!-- declare states -->
    <script src="~/js/states.js"></script>

    <!-- Must be present or app will not find linked Angular files
        @RenderBody()
    -->

    @RenderSection("Scripts", required: false)
</body>

</html>